<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".manager.fragments.StationDetailsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/manager_station_details_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="32dp"
                android:elevation="8dp"
                android:src="@drawable/sign_in_image"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/manager_station_details_change_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="change image"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/manager_station_details_image"
                app:layout_constraintStart_toStartOf="@+id/manager_station_details_image"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_details_image" />

            <TextView
                android:id="@+id/manager_station_details_name"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Aleesi"
                android:textColor="?attr/colorSecondary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_name_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_name_text" />

            <EditText
                android:id="@+id/manager_station_details_station_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/fields_shape"
                android:fontFamily="sans-serif-medium"
                android:hint="Enter station name"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_name_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_name_text"
                app:layout_constraintVertical_bias="1.0" />


            <EditText
                android:id="@+id/manager_station_details_manager_phone_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/fields_shape"
                android:fontFamily="sans-serif-medium"
                android:hint="Enter manager phone"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="18sp"
                android:visibility="gone"

                app:layout_constraintBottom_toBottomOf="@id/manager_station_details_manager_phone_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/manager_station_details_manager_phone_text"
                app:layout_constraintTop_toTopOf="@id/manager_station_details_manager_phone_text" />

            <TextView
                android:id="@+id/manager_station_details_neighborhood_name_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="16dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Neighborhood:"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_neighborhood_name"
                app:layout_constraintStart_toStartOf="@+id/manager_station_details_manager_phone_text"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_details_manager_phone_text" />

            <TextView
                android:id="@+id/manager_station_neighborhood_name"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Almadena"
                android:textColor="?attr/colorSecondary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_neighborhood_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_neighborhood_name_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_neighborhood_name_text"
                app:layout_constraintVertical_bias="0.0" />


            <EditText
                android:id="@+id/manager_station_details_manager_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/fields_shape"
                android:fontFamily="sans-serif-medium"
                android:hint="Enter manager name"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_manager_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_manager_name_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_manager_name_text" />

            <EditText
                android:id="@+id/manager_station_details_neighborhood_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/fields_shape"
                android:fontFamily="sans-serif-medium"
                android:hint="Enter neighborhood"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_neighborhood_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_neighborhood_name_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_neighborhood_name_text" />

            <TextView
                android:id="@+id/manager_station_details_manager_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="16dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Manager phone:"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_manager_phone"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/manager_station_details_manager_name_text"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_details_manager_name_text" />

            <TextView
                android:id="@+id/manager_station_manager_phone"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="777118407"
                android:textColor="?attr/colorSecondary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_manager_phone_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_manager_phone_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_manager_phone_text" />

            <TextView
                android:id="@+id/manager_station_manager_name"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Ali kasem"
                android:textColor="?attr/colorSecondary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_manager_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_manager_name_text"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_manager_name_text" />

            <TextView
                android:id="@+id/manager_station_details_manager_name_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="16dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Manager name:"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_manager_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/manager_station_details_name_text"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_details_name_text" />

            <TextView
                android:id="@+id/manager_station_details_name_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Station name:"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_details_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_details_change_image_button" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/manager_station_details_cancel_button"
                style="@style/Theme.MyFloatingActionButtonError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="?attr/colorError"
                android:contentDescription="@string/edit"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_close"
                android:tint="?attr/colorOnError"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_edit_button"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_details_edit_button"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_edit_button" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/manager_station_details_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/edit"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_neighborhood_name" />

            <Button
                android:id="@+id/manager_station_details_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/English_vermillion"
                android:text="@string/delete"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_call_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_call_button"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_call_button" />

            <Button
                android:id="@+id/manager_station_details_chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="chat"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/manager_station_details_call_button"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_details_call_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/manager_station_details_call_button"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/manager_station_details_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/green"
                android:text="call"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/manager_station_details_delete_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/manager_station_details_chat_button"
                app:layout_constraintTop_toBottomOf="@+id/manager_station_details_edit_button"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>