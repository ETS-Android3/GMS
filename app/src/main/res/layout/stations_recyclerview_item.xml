<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/stationIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:src="@drawable/sign_in_image"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stationName"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="Aleesi"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stationIcon"
        app:layout_constraintEnd_toStartOf="@+id/stationCallIcon"
        app:layout_constraintStart_toEndOf="@+id/stationIcon"
        app:layout_constraintTop_toTopOf="@+id/stationIcon"
        app:layout_constraintVertical_bias="0.513" />

    <ImageView
        android:id="@+id/stationCallIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/stationName"
        app:layout_constraintEnd_toStartOf="@+id/stationoShowLocationIcon"
        app:layout_constraintTop_toTopOf="@+id/stationName"
        app:tint="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/stationoShowLocationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="@+id/stationCallIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stationCallIcon"
        app:layout_constraintVertical_bias="0.0"
        app:tint="?attr/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>