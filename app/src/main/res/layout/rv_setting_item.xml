<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_setting_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:src="@drawable/ic_baseline_home_24"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        android:background="#FFFFFFFF"
        app:layout_collapseMode="none"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_setting_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_setting_item_icon"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iv_setting_item_icon"
        android:text="Title"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tv_setting_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setting_item_title"
        android:layout_alignRight="@+id/iv_setting_item_icon"
        android:layout_toEndOf="@+id/iv_setting_item_icon"
        android:layout_alignParentEnd="true"
        android:text="Description"
        android:layout_marginLeft="8dp"/>
</RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>